<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/Picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/alex" />

    <TextView
        android:id="@+id/profil_t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="7dp"
        android:layout_marginTop="5dp"
        android:fontFamily="cursive"
        android:text="Order some Food"
        android:textSize="30sp"
        android:typeface="normal" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="109dp"
        android:text="Order:"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView12"
        android:layout_alignParentTop="true"
        android:layout_marginTop="158dp"
        android:text="Timeframe:"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/timeframe_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="145dp"
        android:layout_marginEnd="18dp"
        android:ems="10"
        android:hint="timeframe"
        android:inputType="text"
        android:maxLength="10" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView12"
        android:layout_alignParentTop="true"
        android:layout_marginTop="207dp"
        android:text="Reward:"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/Name_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView12"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="255dp"
        android:text="Name:"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/order_street_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView12"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="300dp"
        android:text="Straße:"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/reward_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timeframe_input"
        android:layout_alignStart="@+id/timeframe_input"
        android:ems="10"
        android:hint="reward"
        android:inputType="text"
        android:maxLength="10" />

    <EditText
        android:id="@+id/name_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timeframe_input"
        android:layout_alignStart="@+id/timeframe_input"
        android:layout_marginStart="0dp"
        android:layout_marginTop="54dp"
        android:ems="10"
        android:hint="name "
        android:inputType="text"
        android:maxLength="10" />

    <EditText
        android:id="@+id/straße_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timeframe_input"
        android:layout_alignStart="@+id/timeframe_input"
        android:layout_marginStart="4dp"
        android:layout_marginTop="103dp"
        android:ems="10"
        android:hint="straße"
        android:inputType="text"
        android:maxLength="10" />

    <EditText
        android:id="@+id/order_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/timeframe_input"
        android:layout_alignBottom="@+id/textView12"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="-14dp"
        android:ems="10"
        android:hint="order"
        android:inputType="text"
        android:maxLength="10" />

    <Button
        android:id="@+id/Submit"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView12"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="72dp"
        android:background="@drawable/round_button_style"
        android:text="Order" />
    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:background="?android:attr/windowBackground"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/navigation" />

    <Switch
        android:id="@+id/boolean_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/straße_in"
        android:layout_alignStart="@+id/profil_t"
        android:layout_marginStart="-3dp"
        android:layout_marginTop="12dp"
        android:checked="false"
        android:fontFamily="sans-serif"
        android:text="Fast Delivery"
        tools:checked="false" />

    <Spinner
        android:id="@+id/picture_select"
        android:layout_width="211dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profil_t"
        android:layout_alignParentStart="true"
        android:layout_marginStart="151dp"
        android:layout_marginTop="30dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profil_t"
        android:layout_alignStart="@+id/profil_t"
        android:layout_marginStart="13dp"
        android:layout_marginTop="26dp"
        android:text="Picture:"
        android:textSize="20sp" />

</RelativeLayout>